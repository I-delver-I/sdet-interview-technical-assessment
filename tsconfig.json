{
  "compilerOptions": {
    "types": ["@playwright/test"],
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "pages/**/*.ts",
    "tests/**/*.ts",
    "fixtures/**/*.ts",
    "utils/**/*.ts",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
